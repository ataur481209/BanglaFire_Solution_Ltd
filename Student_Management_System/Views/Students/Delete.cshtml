@model Student_Management_System.Models.Student

@{
    ViewBag.Title = "Delete";
}

<h2 class="text-center text-danger my-4">Confirm Deletion</h2>

<h3 class="text-center mb-4">Are you sure you want to delete this student?</h3>

<div class="border p-4 rounded shadow-sm">
    <dl class="row mb-4">
        <dt class="col-sm-3 font-weight-bold">
            @Html.DisplayNameFor(model => model.StudentName)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.StudentName)
        </dd>

        <dt class="col-sm-3 font-weight-bold">
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>

        <dt class="col-sm-3 font-weight-bold">
            @Html.DisplayNameFor(model => model.Class)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Class)
        </dd>

        <dt class="col-sm-3 font-weight-bold">
            @Html.DisplayNameFor(model => model.Section)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Section)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="text-center">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a href="@Url.Action("Index", "Students")" class="btn btn-secondary ml-3">Back to List</a>
        </div>
    }
</div>
