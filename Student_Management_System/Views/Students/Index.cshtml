@model IEnumerable<Student_Management_System.Models.Student>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center my-4">Student List</h2>

<div class="d-flex justify-content-end mb-4">
    <a href="@Url.Action("Create","Students")" id="btnCreate" class="btn btn-outline-primary btn-sm">
        <i class="fa fa-plus pr-2"></i> Add New Student
    </a>
</div>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.StudentName)</th>
            <th>@Html.DisplayNameFor(model => model.DateOfBirth)</th>
            <th>@Html.DisplayNameFor(model => model.Class)</th>
            <th>@Html.DisplayNameFor(model => model.Section)</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.StudentName)</td>
                <td>@Html.DisplayFor(modelItem => item.DateOfBirth)</td>
                <td>@Html.DisplayFor(modelItem => item.Class)</td>
                <td>@Html.DisplayFor(modelItem => item.Section)</td>
                <td class="text-center">
                    @Html.ActionLink("Edit", "Edit", new { id = item.StudentId }, new { @class = "btn btn-outline-warning btn-sm" })
                    @Html.ActionLink("Details", "Details", new { id = item.StudentId }, new { @class = "btn btn-outline-info btn-sm ml-2" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.StudentId }, new { @class = "btn btn-outline-danger btn-sm ml-2" })
                </td>
            </tr>
        }
    </tbody>
</table>
